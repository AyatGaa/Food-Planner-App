<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".splashscreen.view.SplashScreenFragment">

    <ImageView
        android:id="@+id/logo_intro"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="225dp"
        android:layout_marginEnd="129dp"
        android:background="@drawable/cutlery_primary_color"
        android:contentDescription="@string/logo" />

    <TextView
        android:id="@+id/text_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="391dp"
        android:layout_marginEnd="-4dp"
        android:fontFamily="@font/gluten_regular"
        android:text="@string/plan_your_meals"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="32sp" />

</RelativeLayout>